{
  "manifest_version": 3,
  "name": "Kinode Extension",
  "description": "Kinode Extension",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting", 
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://*.hosting.uncentered.systems:443/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
